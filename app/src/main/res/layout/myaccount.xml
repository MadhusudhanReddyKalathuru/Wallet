<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layoutbackground">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/myaccount_et1"
                android:layout_width="@dimen/edit_width"
                android:layout_height="@dimen/edit_height"
                android:layout_marginTop="25dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="First Name"
                android:text="Madhusudhan Reddy"
                android:textColorHint="@color/hintcolor"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/myaccount_et2"
                android:focusable="false"/>

            <EditText
                android:id="@+id/myaccount_et2"
                android:layout_width="@dimen/edit_width"
                android:layout_height="@dimen/edit_height"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Last Name"
                android:text="Kalathuru"
                android:focusable="false"
                android:textColorHint="@color/hintcolor"
                android:paddingLeft="15dp"
                android:background="@drawable/rounded_edittext"
                android:layout_below="@+id/myaccount_et1"
                android:layout_alignLeft="@+id/myaccount_et4"
                android:layout_alignStart="@+id/myaccount_et4" />

            <EditText
                android:id="@+id/myaccount_et3"
                android:layout_width="@dimen/edit_width"
                android:layout_height="@dimen/edit_height"
                android:layout_alignStart="@+id/myaccount_et2"
                android:layout_below="@+id/myaccount_et2"
                android:layout_marginTop="11dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Mail Id"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:textColorHint="@color/hintcolor" />

            <EditText
                android:id="@+id/myaccount_et4"
                android:layout_width="@dimen/edit_width"
                android:layout_height="@dimen/edit_height"
                android:layout_below="@+id/myaccount_et3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:text="+919701990021"
                android:focusable="false"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:paddingLeft="15dp"
                android:textColorHint="@color/hintcolor" />

            <EditText
                android:id="@+id/myaccount_et5"
                android:layout_width="@dimen/edit_width"
                android:layout_height="@dimen/edit_height"
                android:layout_alignLeft="@+id/spinner"
                android:layout_alignStart="@+id/spinner"
                android:layout_below="@+id/spinner"
                android:layout_marginTop="11dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:text="04/06/1993"
                android:focusable="false"
                android:hint="Date Of Birth"
                android:inputType="date"
                android:paddingLeft="15dp"
                android:textColorHint="@color/hintcolor" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="@dimen/edit_width"
                android:layout_height="@dimen/edit_height"
                android:layout_alignLeft="@+id/myaccount_et4"
                android:layout_alignStart="@+id/myaccount_et4"
                android:layout_below="@+id/myaccount_et4"
                android:layout_marginTop="11dp"
                android:background="@drawable/rounded_edittext"
                android:paddingLeft="15dp"
                android:spinnerMode="dropdown" />

            <EditText
                android:id="@+id/myaccount_et6"
                android:layout_width="@dimen/edit_width"
                android:layout_height="@dimen/edit_height"
                android:layout_alignLeft="@+id/myaccount_et5"
                android:layout_alignStart="@+id/myaccount_et5"
                android:layout_below="@+id/myaccount_et5"
                android:layout_marginTop="11dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Address 1"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="@color/hintcolor" />

            <EditText
                android:id="@+id/myaccount_et7"
                android:layout_width="@dimen/edit_width"
                android:layout_height="@dimen/edit_height"
                android:layout_alignLeft="@+id/myaccount_et6"
                android:layout_alignStart="@+id/myaccount_et6"
                android:layout_below="@+id/myaccount_et6"
                android:layout_marginTop="11dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Address 2"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="@color/hintcolor" />

            <EditText
                android:id="@+id/editText12"
                android:layout_width="@dimen/edit_width"
                android:layout_height="@dimen/edit_height"
                android:layout_alignLeft="@+id/myaccount_et7"
                android:layout_alignStart="@+id/myaccount_et7"
                android:layout_below="@+id/myaccount_et7"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="City"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="@color/hintcolor" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_below="@id/editText12"
                android:text="Save"
                android:background="@drawable/signinbtn"/>

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>

