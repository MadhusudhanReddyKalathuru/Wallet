<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F5F9"
    >

    <Button
        android:id="@+id/btn_myaccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="201dp"
        android:background="@drawable/rounded_edittext"
        android:paddingRight="230dp"
        android:text="@string/btn_about"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/btn_changepwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_myaccount"
        android:layout_marginBottom="1dp"
        android:background="@drawable/rounded_edittext"
        android:paddingRight="290dp"
        android:text="Privacy"
        tools:textAllCaps="false" />

    <Button
        android:id="@+id/btn_pin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_changepwd"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_edittext"
        android:paddingRight="232dp"
        android:text="Terms Of Service"
        tools:textAllCaps="false" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_changepwd"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="104dp"
        android:text="Coco Soft"
        android:textColor="#3273AD"
        android:textSize="40dp" />
</RelativeLayout>
