<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layoutbackground">

    <EditText
        android:id="@+id/editText16"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="IFSC Code"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColorHint="@color/hintcolor" />

    <Button
        android:id="@+id/button8"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/editText16"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/textbtn"
        android:text="Apply"
        android:textColor="@color/purewhite" />

    <Spinner
        android:id="@+id/spin"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/editText18"
        android:layout_alignStart="@+id/editText18"
        android:layout_below="@+id/editText16"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Bank"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        android:textColorHint="@color/hintcolor" />

    <Button
        android:id="@+id/btn_chk"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spin"
        android:layout_marginRight="2dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/button8"
        android:layout_toStartOf="@+id/button8"
        android:background="@drawable/rounded_edittext"
        android:drawable="@drawable/checking_btn"
        android:text="Checking" />

    <Button
        android:id="@+id/btn_sav"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:text="Savings"
        android:layout_alignBaseline="@+id/btn_chk"
        android:layout_alignBottom="@+id/btn_chk"
        android:layout_alignRight="@+id/editText18"
        android:layout_alignEnd="@+id/editText18" />

    <EditText
        android:id="@+id/editText18"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_chk"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="Account Number"
        android:inputType="number"
        android:paddingLeft="15dp"
        android:textColorHint="@color/hintcolor" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:background="@drawable/signupbtn"
        android:text="Save"
        android:textColor="@color/purewhite"
        android:layout_below="@+id/editText18"
        android:layout_alignLeft="@+id/editText16"
        android:layout_alignStart="@+id/editText16"
        android:layout_marginTop="74dp" />
</RelativeLayout>