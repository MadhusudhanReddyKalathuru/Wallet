<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/signinbg">

    <EditText
        android:id="@+id/edit_emailid"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="93dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingLeft="15dp"
        android:hint="Email Id"
        android:textColorHint="#D6D6D9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_below="@+id/edit_emailid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:paddingLeft="15dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#D6D6D9"
        android:background="@drawable/rounded_edittext"/>

    <Button
        android:id="@+id/btn_sign"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
       android:background="@drawable/signinbtn"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Sign In"
        android:textColor="@android:color/background_light"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txt_forgotpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_sign"
        android:layout_below="@+id/btn_sign"
        android:layout_marginTop="22dp"
        android:textSize="17dp"
        android:text="@string/forgot"/>

    <TextView
        android:id="@+id/txt_createaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_forgotpwd"
        android:layout_alignBottom="@+id/txt_forgotpwd"
        android:layout_alignEnd="@+id/btn_sign"
        android:text="@string/Createac"
        android:textSize="17dp" />
</RelativeLayout>