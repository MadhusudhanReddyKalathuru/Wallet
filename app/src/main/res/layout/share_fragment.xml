<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Share CocoSoft App with friends to pass"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/share_fb"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/facebookbtn"
        android:text="Share On FaceBook"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <Button

        android:id="@+id/share_twiter"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/share_fb"
        android:layout_below="@+id/share_fb"
        android:layout_marginTop="11dp"
        android:background="@drawable/twitterbtn"
        android:text="Share On Twitter"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/share_text"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/textbtn"
        android:text="Share Through Text"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/share_twiter"
        android:layout_alignStart="@+id/share_twiter" />

    <Button
        android:id="@+id/share_mail"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/textbtn"
        android:text="Share Using Email"
        android:textColor="@android:color/white"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/share_text"
        android:layout_alignStart="@+id/share_text" />

    <Button
        android:id="@+id/share_link"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/share_mail"
        android:layout_below="@+id/share_mail"
        android:layout_marginTop="14dp"
        android:background="@drawable/textbtn"
        android:text="Copy Website Link"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:text="the savings on to them"
        android:textColor="@android:color/black" />
</RelativeLayout>